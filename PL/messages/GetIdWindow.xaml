<Window x:Class="PL.GetIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="GetIdWindow" Height="150" Width="250"
        DataContext="{Binding RelativeSource= {RelativeSource Mode=Self}}">
    <Grid>
        <Label Content="Enter your ID:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Id}" VerticalAlignment="Top" HorizontalAlignment="Center" Width="158" Margin="0,49,0,0" />
        <Button Content="Enter" Click="Btn_EnterId" Width="100" Height="30" Margin="0,82,0,0" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top"  />
    </Grid>
</Window>
