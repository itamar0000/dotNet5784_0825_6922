<Window x:Class="PL.GetIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="GetIdWindow" Height="150" Width="250"
        DataContext="{Binding RelativeSource= {RelativeSource Mode=Self}}">
    <Grid>
        <Label Content="Enter your ID:" Width="80" HorizontalAlignment="Left" Height="30" Margin="5,21,0,33"/>
        <TextBox Text="{Binding Id}" Width="100" Height="15" Margin="100,31,50,43"/>
        <Button Content="Enter" Click="Btn_EnterId" Width="40" Height=" 10" Margin="0,100,0,0" FontSize="5" HorizontalAlignment="Center" VerticalAlignment="Top"  />
    </Grid>
</Window>
