<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Manager"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="PL.Manager.GanttWindow"
        mc:Ignorable="d"
        Title="GanttWindow" Height="650" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>



        <ListView ItemsSource="{Binding TaskList}">
            <ListView.View>
                <GridView>

                    <!--Alias Column-->
                    <GridViewColumn Header="Alias" DisplayMemberBinding="{Binding Alias}" Width="200"/>

                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DeadlineDate}" Width="800"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
