<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="I am an Engineer" Width="125" Height="30"  Click="Btn_Engineer" VerticalAlignment="Bottom" Margin="222,0,453,39"/>
        <Button Content="I am the Manager" Width="125" Height="30"  Click="Btn_Manager" VerticalAlignment="Bottom" Margin="466,0,209,39"/>
        <Viewbox Stretch="Uniform">
            <Canvas Width="200" Height="200">
                <!-- Arc Path -->
                <!-- TextBlock along the Arc -->
                <TextBlock Text="Welcome to our project management application" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Canvas.Left="209" Canvas.Top="34">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90" CenterX="0" CenterY="0"/>
                    </TextBlock.LayoutTransform>
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="90" CenterX="0" CenterY="0"/>
                            <TranslateTransform X="30" Y="50"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Label Content="{Binding MyTime}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       BorderBrush="#FF2F84AC" Background="#FF97D5F2" BorderThickness="1" Canvas.Left="41" Canvas.Top="30" Height="21" Width="117"
                       HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" FontFamily="Ariel"/>
                <Button Content="Add Day" Click="Button_Click_AddDay" Canvas.Left="38" Canvas.Top="60"/>
                <Button Content="Add Hour" Click="Button_Click_AddHour" Canvas.Left="102" Canvas.Top="60"/>
                <Button Content="Reset Time" Click="Button_Click_ResetTime" Canvas.Left="10" Canvas.Top="10"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
