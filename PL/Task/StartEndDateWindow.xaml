<Window x:Class="PL.Task.StartEndDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        Icon="../Images/Icons/IconOfDate.jpg"
        Title="StartEndDateWindow" Height="300" Width="450"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Label Content="End Date:" VerticalAlignment="Top" Width=" 80" Height="30" HorizontalAlignment="Left" Margin="61,184,0,0"/>
        <Label Content="Start Date:" VerticalAlignment="Top" Width=" 80" Height="30" HorizontalAlignment="Left" Margin="61,35,0,0"/>

        <DatePicker VerticalAlignment="Top" Width="120" Height="30" HorizontalAlignment="Left" Margin="200,187,0,0" Text="{Binding Enddate ,Mode=TwoWay ,Converter= {StaticResource datetostring}}" SelectedDate="{Binding Enddate}" />
        <DatePicker VerticalAlignment="Top" Width="120" Height="30" HorizontalAlignment="Left" Margin="200,35,0,0" Text="{Binding Start, Mode=TwoWay , Converter= {StaticResource datetostring}}" SelectedDate="{Binding Start}" />
        <Button VerticalAlignment="Top" Width="120" Height="30" HorizontalAlignment="Left" Margin="140,244,0,0" Content="Assaign" Click="Button_Click" />
    </Grid>
</Window>
    